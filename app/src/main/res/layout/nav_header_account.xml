<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/margin_size_default"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:clickable="true">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="@dimen/margin_size_default"
        android:gravity="start"
        android:src="@drawable/ic_nav_account"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_size_default"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@id/icon"
        android:text="@string/welcome"
        android:textColor="@color/greyBlack"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/margin_size_large"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/welcome"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon"
        android:text="@string/login_or_signup"
        android:textSize="@dimen/text_size_larger"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:clickable="true"/>
</RelativeLayout>

