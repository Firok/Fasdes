<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_size_default"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="0dp">
        <TextView
            android:id="@+id/unfollowing_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_size_default"
            android:text="@string/unfollowing_message"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:visibility="gone"
            android:maxLines="2"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/padding_end_recycler_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
