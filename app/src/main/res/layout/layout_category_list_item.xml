<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_size_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_default">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <com.woystech.net.view.FadeInNetworkImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/loading"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/margin_size_large"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="@color/greyBlack"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin_size_large"/>
        </LinearLayout>

        <Button
            android:id="@+id/follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_size_large"
            android:background="@color/colorPrimary"
            android:text="@string/follow"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
